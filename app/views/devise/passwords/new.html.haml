.autorization-form
  %h2 Forgot your password?

  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { id: 'forgot-password-form' }) do |f|
    -# = render "devise/shared/error_messages", resource: resource

    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"

    .actions
      %button.medium-btn.gradient-hover.max-width{ type: 'submit', form: 'forgot-password-form' }= "Send me reset password instructions"
      -# = f.submit "Send me reset password instructions"

  = render "devise/shared/links"
